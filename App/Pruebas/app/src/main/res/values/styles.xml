<resources>

    <!-- TEMAS PARA ACTIVIDADES Y FRAGMENTOS -->

    <style name="InicioTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="PrincipalTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- TEMAS PARA TEXTVIEWS -->

    <style name="tituloApp">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="h1">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="h2">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="h3">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="h4">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

</resources>
