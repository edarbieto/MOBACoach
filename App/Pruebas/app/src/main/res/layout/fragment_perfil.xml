<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PerfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fragment_perfil_ly_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fragment_perfil_civ_imagenPerfil"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@android:color/darker_gray"
                android:layout_margin="20dp"
                android:elevation="4dp"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="2dp"
                app:civ_border_overlay="true"/>

            <TextView
                android:id="@+id/fragment_perfil_tv_nombreUsuario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nombre de usuario"
                android:layout_weight="1"
                android:theme="@style/h1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_perfil_ly_cuentas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10sp">

            <TextView
                android:id="@+id/fragment_perfil_tv_cuentas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuentas"
                android:theme="@style/h2"/>

            <TextView
                android:id="@+id/fragment_perfil_tv_dotaTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOTA 2"
                android:theme="@style/h3"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_perfil_rv_cuentasDota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/fragment_perfil_tv_lolTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="League of Legends"
                android:theme="@style/h3"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_perfil_rv_cuentasLol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/fragment_perfil_ly_jugandoAhora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/fragment_perfil_tv_jugandoAhora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jugando ahora"
                android:theme="@style/h2"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_perfil_ly_estadisticas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_perfil_tv_estadisticas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estadisticas"
                android:theme="@style/h2"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_perfil_ly_comunidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_perfil_tv_comunidades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comunidades"
                android:theme="@style/h2"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_perfil_rv_comunidades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_perfil_ly_torneos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_perfil_tv_torneos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Torneos"
                android:theme="@style/h2"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_perfil_rv_torneos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>